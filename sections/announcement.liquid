        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "header",
          "content": "Features"
        },
        {
          "type": "checkbox",
          "id": "hide-on-desktop",
          "label": "Hide in desktop",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "hide-on-mobile",
          "label": "Hide in mobile",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "page-enabled",
          "label": "Limit to specific page",
          "default": false
        },
        {
          "type": "url",
          "id": "page-url",
          "label": "Targeted page"
        },
        {
